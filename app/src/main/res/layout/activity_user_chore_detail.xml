<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ui.UserChoreDetailActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chore clicked on"
        android:id="@+id/choreTitleTextView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="39dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chore description"
            android:id="@+id/choreDescriptionTextView"
            android:textSize="16sp"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/choreTitleTextView"
            android:layout_alignLeft="@+id/choreTitleTextView"
            android:layout_alignStart="@+id/choreTitleTextView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHORE DONE"
            android:id="@+id/allDoneButton"
            android:background="@drawable/big_button"
            android:layout_below="@+id/choreDescriptionTextView"
            android:layout_alignLeft="@+id/choreDescriptionTextView"
            android:layout_alignStart="@+id/choreDescriptionTextView"
            android:layout_marginTop="42dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginTop="80dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need a hand to complete this chore?"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_above="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#f20707" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userZipCode"
            android:hint="enter zipcode "
            android:layout_above="@+id/helpSearchButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your zip code to find out how!"
            android:id="@+id/textView3"
            android:textSize="15sp"
            android:layout_above="@+id/userZipCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET HELP!"
            android:id="@+id/helpSearchButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/big_button"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>
</FrameLayout>
