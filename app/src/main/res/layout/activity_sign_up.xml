<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.sharedchores.SignUpActivity"
    android:background="@color/background_material_light">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with Facebook"
        android:textAllCaps="false"
        android:id="@+id/logInFacebookButton"
        android:background="#3b5998"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with Gmail"
        android:textAllCaps="false"
        android:id="@+id/logInGmailButton"
        android:layout_below="@+id/logInFacebookButton"
        android:layout_centerHorizontal="true"
        android:background="#db3236"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccount"
        android:layout_below="@+id/logInGmailButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:textColor="#231F20" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword|textNoSuggestions"
        android:ems="10"
        android:id="@+id/usernameInput"
        android:hint="name (first, last)"
        android:typeface="normal"
        android:background="@color/colorDeepOrange100"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:hint="email"
        android:layout_above="@+id/passwordSignIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:typeface="normal"
        android:background="@color/colorDeepOrange100" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordSignIn"
        android:hint="password"
        android:layout_above="@+id/password2Input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:typeface="normal"
        android:background="@color/colorDeepOrange100" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2Input"
        android:hint="confirm password"
        android:layout_above="@+id/signInButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:typeface="normal"
        android:background="@color/colorDeepOrange100" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create"
        android:id="@+id/signInButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDeepOrange500"
        android:textColor="#231F20"
        android:textStyle="bold" />


</RelativeLayout>
